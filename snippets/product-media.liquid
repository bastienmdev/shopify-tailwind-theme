{% case media.media_type %}
{% when 'image' %}
<img src="{{ media | img_url: '1000x1000' }}" alt="{{ media.preview_image.alt }}" loading="lazy"
    class="w-full h-full object-cover" width="full" height="full">
{% when 'external_video' %}
{{ media | external_video_tag: class: 'w-full h-80 object-cover' }}
{% when 'video' %}
{{ media | video_tag: controls: true, class: 'w-full h-full object-cover' }}

{% when 'model' %}
{{ media | model_viewer_tag }}
{% else %}
{{ media | media_tag }}

{% endcase %}